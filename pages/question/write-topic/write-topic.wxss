
.bg {
  padding: 16rpx 32rpx;
  background-color: white;
}

.swiper {
  /* height: 1000rpx; */
  height: 95vh;
}

.number {
  display: flex;
  align-items: center;
}

.number-current {
  font-size: 64rpx;
}

.number-total {
  font-size: 32rpx;
}

.number-type {
  display: flex;
  align-items: center;
  padding: 0rpx 10rpx;
  border-radius: 5rpx;
  margin-left: 30rpx;
  height: 50rpx;
}

.title {
  font-size: large;
}

.answer {
  font-size: large;
  margin-top: 40rpx;
}

.title-scroll {
  height: 30%;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.button {
  display: flex;
  justify-content: center;
  padding-top: 12rpx;
}

.answer-scroll {
  height: 45%;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 20rpx;
}